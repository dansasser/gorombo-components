{
  "name": "gorombo-components",
  "version": "0.2.0",
  "description": "Reusable React component library with Tailwind CSS",
  "author": "Gorombo",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/components/index.d.ts",
        "default": "./dist/components/index.js"
      },
      "require": {
        "types": "./dist/components/index.d.cts",
        "default": "./dist/components/index.cjs"
      }
    },
    "./hooks": {
      "import": {
        "types": "./dist/hooks/index.d.ts",
        "default": "./dist/hooks/index.js"
      },
      "require": {
        "types": "./dist/hooks/index.d.cts",
        "default": "./dist/hooks/index.cjs"
      }
    },
    "./theme": {
      "import": {
        "types": "./dist/theme/index.d.ts",
        "default": "./dist/theme/index.js"
      },
      "require": {
        "types": "./dist/theme/index.d.cts",
        "default": "./dist/theme/index.cjs"
      }
    },
    "./tailwind": {
      "import": {
        "types": "./dist/tailwind-preset.d.ts",
        "default": "./dist/tailwind-preset.js"
      },
      "require": {
        "types": "./dist/tailwind-preset.d.cts",
        "default": "./dist/tailwind-preset.cjs"
      }
    },
    "./theme.css": "./dist/theme.css",
    "./stores": {
      "import": {
        "types": "./dist/stores/index.d.ts",
        "default": "./dist/stores/index.js"
      },
      "require": {
        "types": "./dist/stores/index.d.cts",
        "default": "./dist/stores/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "tsup && node scripts/copy-css.mjs",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "nanostores": "^0.10.0",
    "@nanostores/react": "^0.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "clsx": "^2.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.18.1"
  },
  "keywords": [
    "react",
    "components",
    "tailwind",
    "typescript",
    "ui",
    "gorombo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dansasser/gorombo-components.git"
  }
}
